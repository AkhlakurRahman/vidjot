{{#each ideas}}
	<div class="card card-body mb-3">
		<h4>{{title}}</h4>
		<p>{{details}}</p>
		<a href="ideas/edit/{{id}}" class="btn btn-dark btn-block">Edit</a>
		<form action="/ideas/delete/{{id}}?_method=DELETE" method="post">
			<input type="hidden" name="_method" value="DELETE">
			<input  type="submit" class="btn btn-danger btn-block mt-2" value="Delete">
		</form>
	</div>
{{else}}
	<p>No ideas listed yet!</p>
{{/each}}