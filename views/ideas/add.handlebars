<div class="card card-body">
	<h3 class="mb-5">Video Ideas</h3>

	<form action="/ideas" method="post">
		<div class="form-group">
			<label for="title">Title</label>
			<input type="text" name="title" value="{{title}}" class="form-control" id="title" aria-describedby="emailHelp" placeholder="Enter title" required>
		</div>
		<div class="form-group">
			<label for="details">Details</label>
			<textarea class="form-control" name="details" id="details" cols="30" rows="10" required>{{details}}</textarea>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
</div>